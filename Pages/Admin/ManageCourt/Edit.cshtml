@page
@model CourtBookingApp.Pages.Admin.ManageCourt.EditModel

@{
    ViewData["Title"] = "Edit";
}

    <div class="card">
        <h4 class="card-header">Edit Court</h4>

        <div class="row card-body">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Court.Id" />
                    <div class="form-group">
                        <label asp-for="Court.CourtName" class="control-label"></label>
                        <input asp-for="Court.CourtName" class="form-control" />
                        <span asp-validation-for="Court.CourtName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


